@model KareClass.Models.Class

@{
    ViewData["Title"] = "Yeni Sınıf Ekle";
}

<div class="container">
    <h1>Yeni Sınıf Ekle</h1>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="ClassName" class="control-label">Sınıf Adı</label>
                    <input asp-for="ClassName" class="form-control" />
                    <span asp-validation-for="ClassName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="GradeLevel" class="control-label">Sınıf Seviyesi</label>
                    <input asp-for="GradeLevel" class="form-control" type="number" />
                    <span asp-validation-for="GradeLevel" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="DepartmentId" class="control-label">Bölüm</label>
                    <select asp-for="DepartmentId" class="form-select" asp-items="ViewBag.DepartmentId">
                        <option value="">-- Bölüm Seçiniz --</option>
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Kaydet" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 