@model KareClass.Models.Course

@{
    ViewData["Title"] = "Ders Sil";
}

<h1>Ders Sil</h1>

<h3>Bu dersi silmek istediğinizden emin misiniz?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Ders Adı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseName)
        </dd>
        <dt class="col-sm-2">
            Sınıf Seviyesi
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GradeLevel)
        </dd>
        <dt class="col-sm-2">
            Bölüm
        </dt>
        <dd class="col-sm-10">
            @(Model.Department?.DepartmentName ?? "Belirtilmemiş")
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CourseId" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
    </form>
</div> 