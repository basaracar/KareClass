@model KareClass.Models.Course

@{
    ViewData["Title"] = "Ders Detayları";
}

<h1>Ders Detayları</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Ders Adı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseName)
        </dd>
        <dt class="col-sm-2">
            Sınıf Seviyesi
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GradeLevel)
        </dd>
        <dt class="col-sm-2">
            Bölüm
        </dt>
        <dd class="col-sm-10">
            @(Model.Department?.DepartmentName ?? "Belirtilmemiş")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CourseId" class="btn btn-warning">Düzenle</a>
    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
</div> 