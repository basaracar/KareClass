@model IEnumerable<KareClass.Models.Course>

@{
    ViewData["Title"] = "Dersler";
}
<div class="container">
    <h1>Dersler</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Yeni Ders Ekle</a>
    </p>

    <!-- Header Row -->
    <div class="row bg-light py-2 fw-bold border-bottom">
        <div class="col-3">Ders Adı</div>
        <div class="col-2">Sınıf Seviyesi</div>
        <div class="col-3">Bölüm</div>
        <div class="col-4">İşlemler</div>
    </div>

    <!-- Data Rows -->
    @foreach (var item in Model) {
        <div class="row py-2 border-bottom align-items-center">
            <div class="col-3">
                @Html.DisplayFor(modelItem => item.CourseName)
            </div>
            <div class="col-2">
                @Html.DisplayFor(modelItem => item.GradeLevel)
            </div>
            <div class="col-3">
                @(item.Department?.DepartmentName ?? "Belirtilmemiş")
            </div>
            <div class="col-4">
                <a asp-action="Edit" asp-route-id="@item.CourseId" class="btn btn-warning btn-sm">Düzenle</a>
                <a asp-action="Details" asp-route-id="@item.CourseId" class="btn btn-info btn-sm">Detaylar</a>
                <a asp-action="Delete" asp-route-id="@item.CourseId" class="btn btn-danger btn-sm">Sil</a>
            </div>
        </div>
    }
</div>