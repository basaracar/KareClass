@model IEnumerable<KareClass.Models.Course>

@{
    ViewData["Title"] = "Dersler";
}

<h1>Dersler</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Ders Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Ders Adı
            </th>
            <th>
                Sınıf Seviyesi
            </th>
            <th>
                Bölüm
            </th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GradeLevel)
            </td>
            <td>
                @(item.Department?.DepartmentName ?? "Belirtilmemiş")
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CourseId" class="btn btn-warning">Düzenle</a> |
                <a asp-action="Details" asp-route-id="@item.CourseId" class="btn btn-info">Detaylar</a> |
                <a asp-action="Delete" asp-route-id="@item.CourseId" class="btn btn-danger">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table> 