@model KareClass.Models.Department

@{
    ViewData["Title"] = "Bölüm Detayları";
}

<h1>Bölüm Detayları</h1>

<div class="card mb-4">
    <div class="card-header">
        <h4>Bölüm Bilgileri</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">
                Bölüm ID
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.DepartmentId)
            </dd>
            <dt class="col-sm-3">
                Bölüm Adı
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.DepartmentName)
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model.DepartmentId" class="btn btn-primary">Düzenle</a>
        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
    </div>
</div>

@if (Model.Users != null && Model.Users.Any())
{
    <div class="card">
        <div class="card-header">
            <h4>Bu Bölümdeki Kullanıcılar</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Ad</th>
                            <th>Soyad</th>
                            <th>Kullanıcı Türü</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>@user.FirstName</td>
                                <td>@user.LastName</td>
                                <td>@user.UserType</td>
                                <td>@user.Email</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        Bu bölüme bağlı kullanıcı bulunmamaktadır.
    </div>
} 