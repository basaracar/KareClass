@model KareClass.Models.Department

@{
    ViewData["Title"] = "Bölüm Düzenle";
}
.<div class="container">
    
<h1>Bölüm Düzenle</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="DepartmentId" />
                    
                    <div class="form-group mb-3">
                        <label asp-for="DepartmentName" class="control-label">Bölüm Adı</label>
                        <input asp-for="DepartmentName" class="form-control" />
                        <span asp-validation-for="DepartmentName" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 