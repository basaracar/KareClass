@model KareClass.Models.Schedule

@{
    ViewData["Title"] = "Program Düzenle";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-warning">
                    <h4>@ViewData["ClassName"] Sınıfı için Program Düzenle</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <input type="hidden" asp-for="ScheduleId" />
                        <input type="hidden" asp-for="ClassId" value="@ViewData["ClassId"]" />
                        
                        <div class="mb-3">
                            <label asp-for="CourseId" class="form-label">Ders</label>
                            <select asp-for="CourseId" class="form-select" asp-items="ViewBag.CourseId">
                                <option value="">-- Ders Seçin --</option>
                            </select>
                            <span asp-validation-for="CourseId" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="TeacherId" class="form-label">Öğretmen</label>
                            <select asp-for="TeacherId" class="form-select" asp-items="ViewBag.TeacherId">
                                <option value="">-- Öğretmen Seçin --</option>
                            </select>
                            <span asp-validation-for="TeacherId" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="TimeSlotId" class="form-label">Zaman Dilimi</label>
                            <select asp-for="TimeSlotId" class="form-select" asp-items="ViewBag.TimeSlotId">
                                <option value="">-- Zaman Dilimi Seçin --</option>
                            </select>
                            <span asp-validation-for="TimeSlotId" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
                            <button type="submit" class="btn btn-warning">Güncelle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 