@model KareClass.Models.TimeSlot

@{
    ViewData["Title"] = "Zaman Dilimi Sil";
}

<h1>Zaman Dilimi Sil</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">Bu zaman dilimini silmek istediğinizden emin misiniz?</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <h6 class="fw-bold">Gün:</h6>
                    <p>@Html.DisplayFor(model => model.DayOfWeek)</p>
                </div>
                
                <div class="mb-3">
                    <h6 class="fw-bold">Başlangıç Saati:</h6>
                    <p>@Html.DisplayFor(model => model.StartTime)</p>
                </div>
                
                <div class="mb-3">
                    <h6 class="fw-bold">Bitiş Saati:</h6>
                    <p>@Html.DisplayFor(model => model.EndTime)</p>
                </div>
                
                <div class="d-flex justify-content-between mt-4">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="TimeSlotId" />
                        <button type="submit" class="btn btn-danger">Sil</button>
                    </form>
                    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
                </div>
            </div>
        </div>
    </div>
</div> 