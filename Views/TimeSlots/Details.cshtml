@model KareClass.Models.TimeSlot

@{
    ViewData["Title"] = "Zaman Dilimi Detayları";
}

<h1>Zaman Dilimi Detayları</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">@Html.DisplayFor(model => model.DayOfWeek)</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <h6 class="fw-bold">Gün:</h6>
                    <p>@Html.DisplayFor(model => model.DayOfWeek)</p>
                </div>
                
                <div class="mb-3">
                    <h6 class="fw-bold">Başlangıç Saati:</h6>
                    <p>@Html.DisplayFor(model => model.StartTime)</p>
                </div>
                
                <div class="mb-3">
                    <h6 class="fw-bold">Bitiş Saati:</h6>
                    <p>@Html.DisplayFor(model => model.EndTime)</p>
                </div>
                
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.TimeSlotId" class="btn btn-warning">Düzenle</a>
                    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
                </div>
            </div>
        </div>
    </div>
</div> 